{
  "name": "Sprint Graph",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Visualize Jira Sprints as graphs",
  "background": {
    "service_worker": "backgroundScript.js"
  },
  "permissions": [
    "scripting",
    "tabs",
    "activeTab"
  ],
  "action": {
    "default_title": "Sprint Graph"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "*.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
